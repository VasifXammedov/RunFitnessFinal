@model Time
@{
    ViewData["Title"] = "Delete";
}
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>

            <div class="form-group" id="MainCategory">
                <label>Select Day</label>
                <select class="form-control">
                    @foreach (TrainerWeek time in Model.TrainerWeeks)
                    {
                        <option value="@time.Trainer.Id">@time.Trainer.Name</option>
                    }
                    </select>
                <select class="form-control">
                    @foreach (TrainerWeek time in Model.TrainerWeeks)
                    {
                        <option value="@time.Week.Id">@time.Week.Name</option>
                    }
                </select>
            </div>
             
        </div>
    </div>

</div>
<h3 class="text-danger">Are you surc?</h3>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-action="Index" class="btn btn-secondary mt-3">Go Back</a>
