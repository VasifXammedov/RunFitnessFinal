@model List<Fitness>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body" style=" background-color: rgba(3,3,3,0.31);">
            <h4 class="card-title" style=" color: darkblue;">Fitness</h4>
            <div class="table-responsive" style=" background-color: rgba(3,3,3,0.34);">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style=" color: white">
                                Fitness Photo
                            </th>
                            <th style="color: white">
                                 Title
                            </th>
                            <th style="color: white">
                                Description
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Fitness fitness in Model)
                        {
                            <tr>
                                <td style=" background-color: rgba(3,3,3,0.43)">
                                    <img class="img-fluid" src="~/img/fitness/@fitness.Image"
                                         alt="trainer">
                                </td>
                                <td style=" background-color: rgba(3,3,3,0.40);color: white">
                                    @fitness.Title
                                </td>
                                <td style=" background-color: rgba(3,3,3,0.37);color: white">
                                    @fitness.Description
                                </td>
                                <td style=" background-color: rgba(3,3,3,0.37)">
                                    <a asp-controller="Fitness" asp-action="Detail" asp-route-id="@fitness.Id" class="btn btn-success"><i class="mdi mdi-information"></i></a>
                                    <a asp-controller="Fitness" asp-action="Update" asp-route-id="@fitness.Id" class="btn btn-warning"><i class="mdi mdi-table-edit"></i></a>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
