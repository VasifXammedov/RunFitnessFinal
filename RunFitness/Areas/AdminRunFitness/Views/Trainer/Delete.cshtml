@model Trainer
@{
    ViewData["Title"] = "Delete";
}

<div class="col-12">
    <img src="~/img/trainers/@Model.Image" width="300" />
</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Name:</h2>
            <h4 class="card-title">@Model.Name</h4>
        </div>
    </div>
</div>
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>Profession:</h2>
            <h4 class="card-title">@Model.Profession</h4>
        </div>
    </div>
</div>
<h3 class="text-danger">Are you sure?</h3>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
<a asp-action="Index" class="btn btn-secondary mt-3">Go Back</a>




