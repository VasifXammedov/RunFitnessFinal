@model Trainer
@{
    ViewData["Title"] = "Create";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Trainer</h4>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Name">Name</label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Profession">Profession</label>
                    <input asp-for="@Model.Profession" class="form-control" placeholder="Profession">
                    <span class="text-danger" asp-validation-for="@Model.Profession"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TrainerDetail.Title">Title</label>
                    <input asp-for="@Model.TrainerDetail.Title" class="form-control" placeholder="Title">
                    <span class="text-danger" asp-validation-for="@Model.TrainerDetail.Title"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TrainerDetail.Description">Description</label>
                    <input asp-for="@Model.TrainerDetail.Description" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="@Model.TrainerDetail.Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TrainerDetail.Achievement">Achievement</label>
                    <input asp-for="@Model.TrainerDetail.Achievement" class="form-control" placeholder="Achievement">
                    <span class="text-danger" asp-validation-for="@Model.TrainerDetail.Achievement"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TrainerDetail.Experience">Experience</label>
                    <input asp-for="@Model.TrainerDetail.Experience" class="form-control" placeholder="Experience">
                    <span class="text-danger" asp-validation-for="@Model.TrainerDetail.Experience"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TrainerDetail.Hobbie">Hobbie</label>
                    <input asp-for="@Model.TrainerDetail.Hobbie" class="form-control" placeholder="Hobbie">
                    <span class="text-danger" asp-validation-for="@Model.TrainerDetail.Hobbie"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.TrainerDetail.Facuilt">Facuilt</label>
                    <input asp-for="@Model.TrainerDetail.Facuilt" class="form-control" placeholder="Facuilt">
                    <span class="text-danger" asp-validation-for="@Model.TrainerDetail.Facuilt"></span>
                </div>
                <div class="form-group" id="photo">
                    <label asp-for="@Model.Photo"></label>
                    <input asp-for="@Model.Photo" class="form-control" placeholder="Select Photo">
                    <span class="text-danger" asp-validation-for="@Model.Photo"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Create</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_Validation" />
}

