@model Trainer
@{
    ViewData["Title"] = "Detail";
}
<main>
    <div id="inner_page_banner" class="section"
         style="background-image: url(../../img/Slider/slider_7.jpg);background-size: cover;background-position: center; ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="full">
                        <h3>Trainers Details</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Search Form Start-->
    <!-- trainer Start -->
    <div class="trainer-details mt-5 mb-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-sm-5 col-xs-12">
                    <div class="trainer-details-img">
                        <img style="width: 90%;" src="~/img/trainers/@Model.Image" alt="trainer">
                    </div>
                </div>
                <div class="col-lg-6 col-sm-7 col-xs-12">
                    <div class="trainer-details-content ml-50">
                        <h2 class="mt-2">@Model.Name</h2>
                        <h5 class="mt-3">@Model.Profession</h5>
                        <h4 class="mt-3">@Model.TrainerDetail.Title</h4>
                        <p>
                           @Model.TrainerDetail.Description
                        </p>
                        <ul class="mt-5">
                            <li><span>achievements: </span>@Model.TrainerDetail.Achievement</li>
                            <li><span>experience: </span>@Model.TrainerDetail.Experience</li>
                            <li><span>hobbies: </span>@Model.TrainerDetail.Hobbie</li>
                            <li><span>faculty: </span>@Model.TrainerDetail.Facuilt</li>
                        </ul>
                        <a class="readmore_bt" asp-controller="Trainer" asp-action="Index">Go Back <i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- trainer End -->

</main>
